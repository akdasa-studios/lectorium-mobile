{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@core/*": ["./modules/core/*"],
      "@lectorium/*": ["./modules/lectorium/*"],
      "@i18n/*": ["./modules/i18n/*"],
    }
  },
  "include": [
    "modules/lectorium/**/*.ts",
    "modules/lectorium/**/*.d.ts",
    "modules/lectorium/**/*.tsx",
    "modules/lectorium/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
